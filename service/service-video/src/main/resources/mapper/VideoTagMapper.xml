<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.scnu.danmakutv.video.mapper.VideoTagMapper">
    <select id="selectTagsByVideoId" resultType="cn.edu.scnu.danmakutv.domain.VideoTag">
        SELECT *
        FROM t_tag t
                 LEFT JOIN r_video_tag r ON t.id = r.tag_id
        WHERE r.video_id = #{videoId}
    </select>

</mapper>